{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        "entries": {
          "$entryId": {
            ".validate": "newData.hasChildren(['id', 'date', 'lastUpdated'])"
          }
        },
        "settings": {
          ".validate": "newData.hasChildren(['userName', 'iskconCenter'])"
        }
      }
    },
    "chats": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "messages": {
      "$chatId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$messageId": {
          ".validate": "newData.hasChildren(['id', 'chatId', 'senderId', 'senderName', 'text', 'timestamp'])"
        }
      }
    },
    "typing": {
      "$chatId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && $uid === auth.uid"
        }
      }
    },
    "questions": {
      ".read": "auth != null",
      "$questionId": {
        ".write": "auth != null"
      }
    },
    "answers": {
      "$questionId": {
        ".read": "auth != null",
        "$answerId": {
          ".write": "auth != null"
        }
      }
    }
  }
}
